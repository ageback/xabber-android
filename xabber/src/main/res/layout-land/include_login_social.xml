<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="30dp"
    >

    <RelativeLayout
        android:id="@+id/socialTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        >

        <TextView
            android:id="@+id/tvLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:text="Social Sign In"
            android:textColor="@color/white_text_secondary"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tvLabel"
            android:layout_marginLeft="5dp"
            android:background="@color/white_text_secondary"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tvLabel"
            android:layout_marginRight="5dp"
            android:background="@color/white_text_secondary"
            />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llSocialLogos"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:layout_below="@+id/socialTitle"
        >

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_google_plus"
            />

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/ic_facebook"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llSocialLogosSecond"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:layout_below="@+id/llSocialLogos"
        >

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_twitter"
            />

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/ic_github_logo"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/tvInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:layout_below="@+id/llSocialLogosSecond"
        android:textColor="@color/white_text_secondary"
        android:textAlignment="center"
        android:text="Xabber account is required to use redsolution XMPP services and sync device settings."
        />

</RelativeLayout>